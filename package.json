    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
