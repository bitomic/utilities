{
	"name": "@bitomic/eslint-config",
	"version": "1.3.0",
	"license": "MIT",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"import": "./dist/main.mjs",
		"require": "./dist/main.js",
		"types": "./dist/main.d.ts"
	},
	"scripts": {
		"build": "rimraf tsconfig.tsbuildinfo && yarn tsup && yarn tsc --emitDeclarationOnly",
