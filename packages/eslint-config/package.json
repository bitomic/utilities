		"lint:fix": "eslint src/ --fix --ext .ts --cache"
	},
	"devDependencies": {
		"@types/node": "^20.11.21",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"rimraf": "^5.0.5",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3"
	},
	"packageManager": "yarn@3.8.0"
}
